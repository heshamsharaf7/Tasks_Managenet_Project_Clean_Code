@model MajorAddDto


@{
    Layout = "_sidebar";
}

<main id="main" dir="ltr" class="main">

    <div class="wrapper wrapper-content" dir="rtl">
        @if (ViewBag.isSuccess  == true)
        {
            <div class="@ViewBag.alertType" role="alert">
                @*saved done <a asp-controller="book" asp-action="GetBookByI" asp-route-id="@ViewBag.bookId" class="alert-link">go to details</a>. Give it a click if you like.*@
                @ViewBag.message
            </div>
        }
        <div class="container">
            <h3>اضافة تخصص جديد</h3>

        </div>
        <form method="post" asp-action="AddMajor" asp-controller="Majors">

            <div class="form-group">
                <label>اسم التخصص</label>
                <input type="text" class="form-control" asp-for="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label>ملاحظات</label>
                <input type="text" class="form-control" asp-for="Notes" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>تاريخ</label>
                <input type="text" class="form-control" asp-for="EnterdDate" hidden value="@DateTime.Now" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="add major" class="btn btn-primary"> اضافة</button>
                <button asp-action="Index" value="all majors" class="btn btn-primary"> كافة التخصصات</button>
            </div>
        </form>
    </div>

        
    </main>
